<h1 class="pb-4">Explore Categories</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">Explore Categories</li>
  </ol>
</nav>
  
  <div class="row">

<% if(typeof categories!=='undefined' && categories.length>0 ){ %>
    <% categories.forEach(category=>{ %>
        <div class="card col-lg-2 category-card">
            <a href="/categories/<%- category.name %> " class="latest-link">
            <img src="img/<%- category.image %>" class="card-img-top category-img" alt="<%- category.name %>">
            <div class="card-body">
                <p class="card-text"> <%- category.name %> </p>
            </div>
            </a>
        </div>
        <% }) %>
            <% }%>

  </div>

  
  <div class="row">
    <% if(typeof categoryById!='undefined' && categoryById.length>0){ %>
        <% categoryById.forEach(recipe=>{ %>
    <div class="card col-lg-2 category-card" style="width: 14rem; padding: 10px;">
        <a href="/recipe/<%= recipe._id %>" class="latest-link">
            <img src="/uploads/<%= recipe.image %>" class="card-img-top latest-img--large" alt="recipe.name" loading="lazy">
            <div class="card-body">
                <p class="card-text"><%= recipe.name %></p>
            </div>
        </a>
    </div>
    <% }) %>
<% } else {%>
<p>No items found</p>
<% } %>
</div>